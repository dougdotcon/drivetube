{
  "manifest_version": 3,
  "name": "MulaKintola",
  "version": "1.0.0",
  "description": "Extensão para gerenciar e assistir vídeos do MulaKintola",
  "permissions": [
    "identity",
    "storage",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:3333/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://drive.google.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID",
    "scopes": [
      "https://www.googleapis.com/auth/drive.readonly",
      "https://www.googleapis.com/auth/drive.metadata.readonly"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pages/*",
        "scripts/*",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 