{
  "name": "Mulakintola",
  "description": "Interface amigável para visualização de vídeos e cursos armazenados no Google Drive",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "screenshots": [
    {
      "url": "screenshots/screenshot1.png",
      "alt": "Interface principal do Mulakintola"
    },
    {
      "url": "screenshots/screenshot2.png",
      "alt": "Player de vídeo integrado"
    },
    {
      "url": "screenshots/screenshot3.png",
      "alt": "Navegação por pastas"
    }
  ],
  "promotional_images": [
    {
      "url": "promotional/promo1.png",
      "alt": "Mulakintola - Sua plataforma de vídeos"
    },
    {
      "url": "promotional/promo2.png",
      "alt": "Organize seus vídeos com facilidade"
    }
  ],
  "store_listing": {
    "primary_category": "Productivity",
    "secondary_categories": [
      "Education",
      "Entertainment"
    ],
    "features": [
      "Visualização de vídeos do Google Drive",
      "Organização por pastas",
      "Player integrado",
      "Tema claro/escuro",
      "Cache local"
    ],
    "privacy_policy_url": "https://mulakintola.com/privacy",
    "website_url": "https://mulakintola.com",
    "support_url": "https://mulakintola.com/support"
  },
  "pricing": {
    "type": "subscription",
    "plans": [
      {
        "name": "Básico",
        "price": 2,
        "period": "monthly",
        "features": [
          "Acesso ilimitado a vídeos",
          "Suporte por email",
          "Atualizações de segurança"
        ]
      },
      {
        "name": "Pro",
        "price": 5,
        "period": "monthly",
        "features": [
          "Tudo do plano Básico",
          "Download de vídeos",
          "Suporte prioritário",
          "Recursos avançados"
        ]
      },
      {
        "name": "Empresarial",
        "price": 10,
        "period": "monthly",
        "features": [
          "Tudo do plano Pro",
          "API dedicada",
          "Suporte 24/7",
          "Recursos personalizados",
          "Treinamento exclusivo"
        ]
      }
    ],
    "trial": {
      "days": 30,
      "videos_per_day": 1
    }
  },
  "localization": {
    "default_locale": "pt_BR",
    "supported_locales": [
      "pt_BR",
      "en_US",
      "es_ES"
    ]
  }
} 